<h2>Listing users <%= link_to 'New User', new_user_path, :class=>"btn btn-primary"  %></h2>

<table class="table">
  <thead>
    <th><b>Email</b</th>
    <!--<th>Hashed password</th>
    <th>Salt</th>-->
    <th></th>
    <th></th>
    <th></th>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <!--<td><%= user.hashed_password %></td>
    <td><%= user.salt %></td>-->
    <td width="50"><%= link_to 'Show', user, :class=>"btn btn-primary" %></td>
    <td width="50"><%= link_to 'Edit', edit_user_path(user), :class=>"btn btn-primary"  %></td>
    <td width="50"><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class=>"btn btn-danger"  %></td>
  </tr>
<% end %>
</table>

