<h2>Listing categories <%= link_to 'New Category', new_admin_category_url, :class=>"btn btn-primary" %></h2>

<table class="table">
  <thead>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td width="50"><%= link_to 'Show', category, :class=>"btn btn-primary" %></td>
    <td width="50"><%= link_to 'Edit', edit_admin_category_url(category), :class=>"btn btn-primary" %></td>
    <td width="50"><%= link_to 'Destroy', [:admin, category], confirm: 'Are you sure?', method: :delete, :class=>"btn btn-danger" %></td>
  </tr>
<% end %>
</table>

