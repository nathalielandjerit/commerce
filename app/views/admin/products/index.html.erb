<div class="span6">
  <p><%= link_to 'New Product', new_admin_product_url, :class=>'btn' %></p>
  <%= search_form_for [:admin, @q] do |f| %>
  <%= f.label :title_cont %>
  <%= f.text_field :title_cont %>
  <%= f.submit %>
  <% end %>
  <ul class="thumbnails">
    <% @products.each do |product| %>
      <li class="span3">
        <div class="thumbnail">
          <%= image_tag "/system/product_image/"+ product.image_url %>
          <div class="caption">
            <h3><%= product.title %></h3>
            <p><b>Categorie : </b><%= product.category.name %></p>
            <p><b>Prix</b> : <%= euro_price(product.price) %></p>
            <p>
              <%= link_to 'Show', [:admin, product], :class=>"btn btn-primary" %> 
              <%= link_to 'Edit', edit_admin_product_url(product), :class=>"btn btn-primary" %> 
              <%= link_to 'Destroy', [:admin, product], confirm: 'Are you sure?', method: :delete, :class=>"btn btn-primary" %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= will_paginate @products %>
</div>
