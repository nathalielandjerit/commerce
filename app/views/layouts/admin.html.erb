<!DOCTYPE html>
<html>
<head>
  <title>Commerce</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="#">Back Office</a>
      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to 'Front', root_url %></li>
          <li class="active"><%= link_to 'Back', admin_products_url %></li>
          <li><%= link_to 'Blog', admin_articles_url %></li>
          <li><%= link_to 'Commande', admin_orders_url %></li>
          <li><%= link_to 'Categories', admin_categories_url %></li>

          <% if current_user %>
            <li class="email"><%= current_user.email %></li>
            <li><%= link_to 'Deconnexion', destroy_user_session_url, :method => :delete %></li>
          <% else %>
            <li><%= link_to 'Connexion', new_user_session_url %></li>
            <li><%= link_to 'S\'inscrire', new_user_registration_url %></li>
          <% end %>

        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
</div>

<div class="container">
<br/>
  <% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

<%= yield %>

</div>

</body>
</html>
