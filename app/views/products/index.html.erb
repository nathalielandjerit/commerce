<div class="span6">
  <p><%= link_to 'New Product', new_product_path, :class=>'btn' %></p>
  <ul class="thumbnails">
    <% @products.each do |product| %>
      <li class="span3">
        <div class="thumbnail">
          <%= image_tag "/system/product_image/"+ product.image_url %>
          <div class="caption">
            <h3><%= product.title %></h3>
            <p><%= product.description %></p>
            <p><b>Prix</b> : <%= euro_price(product.price) %></p>
            <p><%= link_to 'Show', product, :class=>"btn btn-primary" %> <%= link_to 'Edit', edit_product_path(product), :class=>"btn btn-primary" %> <%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete, :class=>"btn btn-primary" %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
